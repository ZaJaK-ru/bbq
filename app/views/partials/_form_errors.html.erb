<% errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger">
    <div class="lead buffer-bottom">
      В вашей форме <%= I18n.t :errors_declination, count: errors.count %>
    </div>

    <ul>
      <% errors.each do |error| %>
        <li><%= error.attribute %> <%= error.message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="row">
  <div class="col-md-8 buffer-top">
    <h2><%= t('.change_your_password') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, t('.new_password') %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('.minimum_password_length', resource:@minimum_password_length) %></small>
        <% end %>       
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, t('.confirm_new_password') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
